<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.vimemacs.dao.UserDao">
    <sql id="userField">
        a.id as "id",
        a.name as "name",
        a.password as "password"
    </sql>
    <resultMap id="userMap" type="com.vimemacs.model.User">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="password" column="password"/>
    </resultMap>
    <!-- 获取所有用户 -->
    <select id="findAll" resultMap="userMap">
        select
            <include refid="userField"> </include> 
        from user as a
    </select>
    <!-- 根据用户 ID 查询 user 表 -->
    <select id="findById" parameterType="String" resultType="com.vimemacs.model.User">
        select * from user
        where id = #{id}
    </select>
    <!-- 通过名称查询用户 -->
    <!--
    <select id="findByName" parameterType="String" resultType="com.vimemacs.model.User">
        select * from user
        where name = #{name}
    </select>
    -->
    <!--
    <select id="findByName" parameterType="String" resultType="com.vimemacs.model.User">
        select * from user
        where 1=1
        <if test="name != null and name !=''">
            and name = #{name}
        </if>
    </select>
    -->
    <select id="findByName" parameterType="String" resultType="com.vimemacs.model.User">
        select * from user
        <where>
            <if test="name != null and name !=''">
            and name = #{name}
           </if>
        </where>
    </select>
    <!--
    <select id="findByName" parameterType="String" resultMap="userMap">
        select
        <include refid="userField"></include>
        from user a
        where 1=1
        <if test="name != null and name !=''">
            and name = #{name}
        </if>
    </select>
    -->
    <!-- 通过用户名 name 和密码 password 查询用户 -->
    <!--
    <select id="findByNameAndPassword" parameterType="String" resultMap="userMap">
        select
        <include refid="userField"></include>
        from user a
        where 1 = 1
        <if test="name != null and name != ''">
            and name = #{name}
        </if>
        <if test="password != null and password != ''">
            and password = #{password}
        </if>
    </select>
    -->
    <!--
    <select id="findByNameAndPassword" parameterType="String" resultMap="userMap">
        select
        <include refid="userField"></include>
        from user a
        where 1 = 1
        <choose>
            <when test="name != null and name != ''">
                and name = #{name}
            </when>
            <when test="password != null and password != ''">
                and password = #{password}
            </when>
            <otherwise>
                order by id desc
            </otherwise>
        </choose>
    </select>
    -->
    <select id="findByNameAndPassword" parameterType="String" resultMap="userMap">
        select
        <include refid="userField"></include>
        from user a
        <trim prefix="where" prefixOverrides="and">
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="password != null and password != ''">
                and password = #{password}
            </if>
        </trim>
    </select>
    <!-- 通过名称查询用户个数 -->
    <select id="countByName" parameterType="String" resultType="int">
        select count(*) from user
        where name = #{name}
    </select>

    <!-- 插入用户数据 -->
    <!--
    <insert id="insert" parameterType="com.vimemacs.model.User">
        insert into user(id, name, password) value (#{id}, #{name}, #{password});
    </insert>
    -->
    
    <!-- 插入用户数据，主键自增 -->
    <!--
    <insert id="insert" useGeneratedKeys="true" keyProperty="id" parameterType="com.vimemacs.model.User">
        insert into user(name, password) value (#{name}, #{password});
    </insert>
    -->
    <insert id="insert" useGeneratedKeys="true" keyProperty="id" parameterType="com.vimemacs.model.User">
        <selectKey keyProperty="id" resultType="int" order="BEFORE">
            select max(id) + 1 as id from user
        </selectKey>
        insert into user(id, name, password) value (#{id}, #{name}, #{password});
    </insert>
    
    <!--
    <update id="update" parameterType="com.vimemacs.model.User">
        update user set
            name = #{name},
            password = #{password}
        where id = #{id}
    </update>
    -->
    <update id="update" parameterType="com.vimemacs.model.User">
        update user
        <trim prefix="set" suffixOverrides=",">
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="password != null and password != ''">
                password = #{password}
            </if>
        </trim>
        where id = #{id}
    </update>

    <delete id="delete" parameterType="int">
        delete from user
        where id=#{id}
    </delete>
    
    <delete id="deleteByName" parameterType="String">
        delete from user
        where name=#{name}
    </delete>
    
</mapper>